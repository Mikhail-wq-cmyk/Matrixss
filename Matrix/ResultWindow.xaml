<Window x:Class="MatrixCalculator.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результат операции" Height="400" Width="600"
        Background="#FAFAFA">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Результат операции" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <UniformGrid x:Name="ResultGrid" Rows="1" Columns="1"/>
        </StackPanel>
    </Grid>
</Window>
